<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment_main.MainFragment"
    android:id="@+id/main_nsv">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/edit_text" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_edit_text"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />



        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/selection_controls" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selections"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/recycle_view" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_demo_rv"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/animation" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_animation"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/tabs" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tabs"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/buttons" />
        <!--  RV Не забываем !!!!! android:clipToPadding="false"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_buttons"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />


<!--        <com.google.android.material.textview.MaterialTextView-->
<!--            style="@style/heading_text_style"-->
<!--            android:text="@string/chips" />-->
<!--        &lt;!&ndash;  RV Не забываем !!!!! android:clipToPadding="false"&ndash;&gt;-->
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rv_chips"-->
<!--            style="@style/padding_start_top_end_normal_rv"-->
<!--            android:clipToPadding="false"-->
<!--            android:orientation="horizontal" />-->

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/constrained_layout" />
        <!--  RV Не забываем !!!!! android:clipToPadding="false"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_constraint_layout"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />



        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/bottom_sheet" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_sheet"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/bottom_navigation" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_nav"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/bottom_app_bar" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_app_bar"
            style="@style/padding_start_top_end_normal_rv"
            android:clipToPadding="false"
            android:orientation="horizontal" />


        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/typography" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_typography"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/step_top_normal"
            android:layout_marginStart="@dimen/step_start_normal"
            android:layout_marginEnd="@dimen/step_end_normal"
            app:cardCornerRadius="@dimen/radius_normal"
            app:strokeWidth="@dimen/stroke_width_normal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rv_typography"
                android:scaleType="centerCrop"
                android:alpha="@dimen/alpha_img_large"/>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.textview.MaterialTextView
            style="@style/heading_text_style"
            android:text="@string/themes" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_themes"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/step_top_normal"
            android:layout_marginStart="@dimen/step_start_normal"
            android:layout_marginEnd="@dimen/step_end_normal"
            app:cardCornerRadius="@dimen/radius_normal"
            app:strokeWidth="@dimen/stroke_width_normal"
            app:cardElevation="@dimen/elevation_normal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rv_themes"
                android:scaleType="centerCrop"
                android:alpha="@dimen/alpha_img_large"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginStart="@dimen/step_normal"
            android:layout_marginEnd="@dimen/step_normal"
            android:layout_marginTop="@dimen/step_xx_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:text="@string/credits"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_margin="@dimen/step_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/grey_700"
            android:text="@string/credits_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_width"/>


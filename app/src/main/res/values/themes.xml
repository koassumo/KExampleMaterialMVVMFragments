        <!--        <item name="colorAccent">#143DB6</item>-->
        <!--        android:statusBarColor и android:navigationBarColor - для системных панелей-->

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">28dp</item>
    </style>


    <style name="GreenAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_700</item>       //аттрибут (ключ) colorPrimary создан в appCompat
        <item name="myColorPrimaryLight">@color/green_50</item> //аттрибут (ключ) myColorPrimaryLight создан самостоятельно через аттрибуты
        <item name="colorPrimaryDark">@color/green_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>      //обращение к цвету не напрямую, а к цвету аттрибута (ключа) colorPrimary (созданному в appCompat)

        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="myColorBottomNavigationView">?attr/colorPrimary</item>
        <item name="myColorBottomAppBar">?attr/colorPrimaryDark</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>

        <item name="textAppearanceHeadline6">@style/TextAppearance.Shrine.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
    </style>



    <style name="TextAppearance.Shrine.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>



    <style name="BrownAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brown_700</item>
        //Light создан самостоятельно через аттрибуты
        <item name="myColorPrimaryLight">@color/brown_200</item>
        <item name="colorPrimaryDark">@color/brown_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>

        <item name="colorSecondary">@color/pink_800</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/pink_100</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="myColorBottomNavigationView">@color/brown_400</item>
        <item name="myColorBottomAppBar">?attr/colorPrimary</item>

<!--        <item name="android:colorBackground">@color/brown_50</item>-->
        <item name="android:navigationBarColor">@color/brown_900</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

    <style name="YellowAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow_700</item>
        //Light создан самостоятельно через аттрибуты
        <item name="myColorPrimaryLight">@color/yellow_200</item>
        <item name="colorPrimaryDark">@color/yellow_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="strokeColor">?attr/colorPrimaryDark</item>

        <item name="colorSecondary">@color/pink_800</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="myColorBottomNavigationView">?attr/colorPrimary</item>
        <item name="myColorBottomAppBar">?attr/colorPrimaryDark</item>

<!--        <item name="android:colorBackground">@color/yellow_A100</item>-->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

    <style name="NoNoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

</resources>
        <item name="colorOnPrimary">@color/white</item>
        <item name="strokeColor">?attr/colorPrimary</item>      //обращение к цвету не напрямую, а к цвету аттрибута (ключа) colorPrimary (созданному в appCompat)

        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="myColorBottomNavigationView">?attr/colorPrimary</item>
        <item name="myColorBottomAppBar">?attr/colorPrimaryDark</item>
